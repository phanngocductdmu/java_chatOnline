<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:background="#f0f0f0"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout6"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAVT"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/android"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctChatFriend"
            android:layout_width="wrap_content"
            android:layout_marginStart="5dp"
            android:padding="5dp"
            app:layout_constraintStart_toEndOf="@+id/imgAVT"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/custom_chat"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtChatFriends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Hom nay an gi"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtThoiGianFriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="2:44"
                android:textColor="@color/xam"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtChatFriends"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctGhiAmFriend"
            android:layout_width="wrap_content"
            android:layout_marginStart="5dp"
            android:padding="15dp"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/imgAVT"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/custom_chat"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgTiepTucFriend"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/tieptuc"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/seekBarFriend"
                app:layout_constraintTop_toTopOf="parent" />

            <SeekBar
                android:id="@+id/seekBarFriend"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtThoiGianGhiAmFriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2:44"
                android:layout_marginStart="10dp"
                android:textColor="@color/xam"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/seekBarFriend" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/imgChatFriends"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/imgAVT"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgStickFriend"
            android:layout_marginStart="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:foregroundGravity="center"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/imgAVT"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>