<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f0f0f0"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctTinNhan"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:background="@drawable/custom_chat_me"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"

            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtChatMe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Gà chiên nước mắm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/txtThoiGianMe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2:44"
                android:textColor="@color/xam"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtChatMe" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctGhiAmMe"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:background="@drawable/custom_chat_me"
            android:paddingStart="10dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgTiepTucMe"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/tieptuc"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/seekBarMe"
                app:layout_constraintTop_toTopOf="parent" />

            <SeekBar
                android:id="@+id/seekBarMe"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/txtThoiGianGhiAmMe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2:44"
                android:layout_marginEnd="15dp"
                android:textColor="@color/xam"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/seekBarMe" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/txtTrangThai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã nhận"
            android:visibility="gone"
            android:textSize="13dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ctTinNhan"/>
        <ImageView
            android:id="@+id/imgChatMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/imgStick"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:foregroundGravity="center"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>